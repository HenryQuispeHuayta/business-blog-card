---
interface Props {
  title: string;
  content: string;
	img: string;
  author: string;
  authorAvatar: string;
  authorProfession: string;
}

const { title, content, img, author, authorProfession, authorAvatar } = Astro.props;
---

<article>
  <header>
    <img class="card" src={img} alt="card-image" />
    <img
      class="overlay"
      src="/white-overlay.svg"
      alt="white-overlay"
    />
  </header>
  <main>
    <h2>{title}</h2>
    <p>{content}</p>
    <section>
      <img src={authorAvatar} alt={authorAvatar.split("/")[3]} />
      <div>
        <h3>{author}</h3>
        <p>{authorProfession}</p>
      </div>
    </section>
  </main>
</article>

<style>
  article {
    background-color: white;
    max-width: 26rem;
    border-radius: 10px;
  }
  header {
    height: 280px;
  }
  .card {
    width: 100%;
    align-items: flex-end;
    border-radius: 10px;
  }
  .overlay {
    position: relative;
    bottom: 70px;
  }
  main {
    padding: 0 30px 30px 30px;
  }
  h2 {
    font-size: 1.5rem;
    font-family: "Poppins", sans-serif;
  }
  h2,
  h3 {
    color: #111729;
  }
  h3,
  p {
    font-size: 1rem;
    font-family: "Lato", sans-serif;
  }
  p {
    color: #4a5567;
  }
  section {
    display: flex;
    align-items: center;
    gap: 20px;
    margin: 50px 0 0.125rem 0;
  }
  section img {
    width: 35px;
    height: 35px;
    border-radius: 50%;
  }
  div p,
  div h3 {
    margin: 0;
  }
</style>
